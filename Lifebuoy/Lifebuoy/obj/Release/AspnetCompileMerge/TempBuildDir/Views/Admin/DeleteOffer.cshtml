@model Lifebuoy.Models.Offers

@{
    ViewBag.Title = "Удаление";
}
<div class="row main-page-row" style="padding:10px;">
    <h2>Удаление</h2>

    <h3>Вы уверены что хотите удалить это?</h3>
    <div>
        <hr />
        <div class="row">
            @foreach (var image in ViewBag.Images)
            {
                <div class="col-md-4">
                    @Html.Raw("<img class='img-rounded catalog-img' src=\"data:image/jpeg;base64," + image + "\" />")
                </div>
            }
        </div>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Category)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Category)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.CatalogName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CatalogName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.City)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.City)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Adress)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Adress)
            </dd>


        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Удалить" class="btn btn-danger" /> |
                @Html.ActionLink("Назад", "Dashboard")
            </div>
        }
    </div>
</div>
