@model IEnumerable<Lifebuoy.Models.Offers>
    <div class="row main-page-row">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Provider)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
        @if (Model.Count() == 0)
            {
            <tr>
                <td>
                    Нет предложений ждущих модерацию.
                </td>
            </tr>
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Provider)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    <a class="catalog-link" href="@Url.Action("ModerateOffer","Admin", new { id = item.Id })">Модерировать</a>
                </td>
            </tr>
        }

    </table>
</div>