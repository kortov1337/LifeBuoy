
@model Lifebuoy.Models.OffersListView

<form method="get" id="filtersForm">
    <div class="form-horizontal">

        <label class="control-label">Город: </label>
        @Html.DropDownList("cities", Model.Cities as SelectList,
                htmlAttributes: new {@id = "city", @class = "form-control minimal" })

        <label class="control-label">Категория: </label>
        @Html.DropDownList("categories", Model.Categories as SelectList,
                    htmlAttributes: new { @id = "category", @class = "form-control minimal" })

        <label class="control-label">Провайдер: </label>
        @Html.DropDownList("providers", Model.Providers as SelectList,
                htmlAttributes: new { @id = "provider", @class = "form-control minimal" })
    </div>
</form>
<script src="~/Scripts/jquery-1.8.3.js"></script>
<script type="text/javascript" src="~/Scripts/SidebarScripts.js"></script>
